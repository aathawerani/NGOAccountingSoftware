<Window x:Class="TrustApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrustApplication"
        xmlns:views="clr-namespace:TrustApplication.Views"
        mc:Ignorable="d"
        Title="Trust Application" Height="720" Width="1120" MinHeight="540" MinWidth="900"
        WindowStartupLocation="CenterScreen"
        Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}">

    <Window.Resources>
        <!-- Button used in the nav list -->
        <Style TargetType="Button" x:Key="NavButton">
            <Setter Property="Margin" Value="0,4"/>
            <Setter Property="Padding" Value="12,10"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter Property="Background" Value="{DynamicResource {x:Static SystemColors.ControlLightBrushKey}}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="TextBlock" x:Key="Heading">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>

        <!-- Make Expander headers a bit denser -->
        <Style TargetType="Expander">
            <Setter Property="Margin" Value="0,8,0,0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
    </Window.Resources>

    <!-- Shell layout: fixed-width left menu, fluid right content. -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Navigation -->
        <Border Grid.Column="0" Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}" Padding="12" BorderThickness="0,0,1,0" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}">
            <DockPanel LastChildFill="True">
                <TextBlock DockPanel.Dock="Top" Text="Navigation" Style="{StaticResource Heading}"/>

                <!-- Scrollable group of collapsible sections -->
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- OPERATIONS -->
                        <Expander Header="Rent" IsExpanded="True">
                            <StackPanel Margin="8,4,0,8">
                                <Button Style="{StaticResource NavButton}" Content="Receipt" Click="OnNavItemClick" CommandParameter="{x:Static local:Section.Rent}"/>
                                <Button Style="{StaticResource NavButton}" Content="Tenants" Click="OnNavItemClick" CommandParameter="{x:Static local:Section.Tenants}"/>
                            </StackPanel>
                        </Expander>

                        <!-- REPORTS -->
                        <Expander Header="Majlis">
                            <StackPanel Margin="8,4,0,8">
                                <Button Style="{StaticResource NavButton}" Content="Receipt" Click="OnNavItemClick" CommandParameter="{x:Static local:Section.Majlis}"/>
                                <Button Style="{StaticResource NavButton}" Content="Voucher" Click="OnNavItemClick" CommandParameter="{x:Static local:Section.Voucher}"/>
                            </StackPanel>
                        </Expander>

                        <!-- ADMINISTRATION -->
                        <Expander Header="Accounts">
                            <StackPanel Margin="8,4,0,8">
                                <Button Style="{StaticResource NavButton}" Content="Manual" Click="OnNavItemClick" CommandParameter="{x:Static local:Section.Settings}"/>
                                <Button Style="{StaticResource NavButton}" Content="Investments" Click="OnNavItemClick" CommandParameter="{x:Static local:Section.Users}"/>
                            </StackPanel>
                        </Expander>

                        <Expander Header="Reports">
                            <StackPanel Margin="8,4,0,8">
                                <Button Style="{StaticResource NavButton}" Content="Cash" Click="OnNavItemClick" CommandParameter="{x:Static local:Section.Settings}"/>
                                <Button Style="{StaticResource NavButton}" Content="Receivables" Click="OnNavItemClick" CommandParameter="{x:Static local:Section.Users}"/>
                            </StackPanel>
                        </Expander>

                        <Expander Header="Import/Export">
                            <StackPanel Margin="8,4,0,8">
                                <Button Style="{StaticResource NavButton}" Content="Import" Click="OnNavItemClick" CommandParameter="{x:Static local:Section.Settings}"/>
                                <Button Style="{StaticResource NavButton}" Content="Export" Click="OnNavItemClick" CommandParameter="{x:Static local:Section.Users}"/>
                            </StackPanel>
                        </Expander>
                    </StackPanel>
                </ScrollViewer>

            </DockPanel>
        </Border>

        <!-- thin divider -->
        <Border Grid.Column="1" Width="1" Background="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}"/>

        <!-- Right content -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top bar -->
            <Border Padding="16,12" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" BorderBrush="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" BorderThickness="0,0,0,1">
                <DockPanel>
                    <TextBlock Text="{Binding CurrentSectionTitle}" FontSize="18" FontWeight="Bold"/>
                </DockPanel>
            </Border>

            <!-- Main region where views are swapped -->
            <ContentControl Grid.Row="1" Margin="16" Content="{Binding CurrentView}"/>
        </Grid>
    </Grid>
</Window>
