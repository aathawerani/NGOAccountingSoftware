<?xml version="1.0" encoding="utf-8"?>
<UserControl xmlns:ui="clr-namespace:TrustApplication.ViewModels" x:Class="TrustApplication.Views.AccountsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Migrated from Tab 'Accounts' -->
  <Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="#FFE5E5E5" ui:ResponsiveGrid.BreakpointWidth="1100" >
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

                    <DataGrid x:Name="Accounts_Grid" AutoGenerateColumns="False" IsSynchronizedWithCurrentItem="True" HorizontalAlignment="Right" Margin="10,202,0,0" VerticalAlignment="Top" Height="303" Width="900" SelectionChanged="Accounts_Grid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding Path=Date}" />
                            <DataGridTextColumn Header="No" Binding="{Binding Path=No}" />
                            <DataGridTextColumn Header="A/c" Binding="{Binding Path=Account}" />
                            <DataGridTextColumn Header="Name" Binding="{Binding Path=Name}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Width" Value="200" />
                                        <Setter Property="ToolTip" Value="{Binding Path=Name}" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Particulars" Binding="{Binding Path=Particulars}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Width" Value="200" />
                                        <Setter Property="ToolTip" Value="{Binding Path=Particulars}" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Debit" Binding="{Binding Path=Debit}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Credit" Binding="{Binding Path=Credit}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Total" Binding="{Binding Path=Total}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="ID" Binding="{Binding Path=ID}" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="Account_Update_button" Content="Update" HorizontalAlignment="Left" Margin="831,16,0,0" VerticalAlignment="Top" Width="75" Click="Account_Update_button_Click" />
                    <Button x:Name="Account_Add_button" Content="Add" HorizontalAlignment="Left" Margin="831,66,0,0" VerticalAlignment="Top" Width="75" Click="Account_Add_button_Click" />
                    <Button x:Name="Account_Delete_button" Content="Delete" HorizontalAlignment="Left" Margin="831,112,0,0" VerticalAlignment="Top" Width="75" Click="Account_Delete_button_Click" />
                    <Label x:Name="label_Copy130" Content="Trust" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="43" Width="55" FontSize="20" />
                    <ComboBox x:Name="Accounts_Trust_comboBox" HorizontalAlignment="Left" Margin="65,13,0,0" VerticalAlignment="Top" Width="150" Height="36" FontSize="20" SelectionChanged="Accounts_Trust_comboBox_SelectionChanged" />
                    <Label x:Name="label_Copy131" Content="Account" HorizontalAlignment="Left" Margin="220,10,0,0" VerticalAlignment="Top" Height="43" Width="82" FontSize="20" />
                    <ComboBox x:Name="Accounts_Account_comboBox" HorizontalAlignment="Left" Margin="303,13,0,0" VerticalAlignment="Top" Width="136" Height="36" FontSize="20" SelectionChanged="Accounts_Account_comboBox_SelectionChanged" />
                    <DatePicker x:Name="Accounts_Date" SelectedDate="{Binding ElementName=Accounts_Grid, Path=SelectedItem.Date, StringFormat={}{0:d MM yyyy}, Mode=OneWay}" HorizontalAlignment="Left" Margin="661,14,0,0" VerticalAlignment="Top" Height="40" Width="160" FontSize="20" />
                    <Label x:Name="label1_Copy13" Content="Date" HorizontalAlignment="Left" Margin="606,13,0,0" VerticalAlignment="Top" Height="42" Width="54" FontSize="20" />
                    <Label x:Name="label_Copy132" Content="Receipt" HorizontalAlignment="Left" Margin="444,10,0,0" VerticalAlignment="Top" Height="44" Width="79" FontSize="20" RenderTransformOrigin="0.727,2.907" />
                    <TextBox x:Name="Accounts_SerialNo_textBox" Text="{Binding ElementName=Accounts_Grid, Path=SelectedItem.No}" HorizontalAlignment="Left" Height="38" Margin="521,12,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="73" FontSize="20" RenderTransformOrigin="1.211,0.5" />
                    <Label x:Name="label4_Copy4" Content="Name" HorizontalAlignment="Left" Margin="14,59,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.167,0.487" Height="42" Width="69" FontSize="20" />
                    <TextBox x:Name="Accounts_Name_textBox" Text="{Binding ElementName=Accounts_Grid, Path=SelectedItem.Name}" HorizontalAlignment="Left" Height="38" Margin="83,63,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="738" FontSize="20" />
                    <Label x:Name="label_Copy133" Content="Reference Account" HorizontalAlignment="Left" Margin="13,104,0,0" VerticalAlignment="Top" Height="43" Width="180" FontSize="20" />
                    <ComboBox x:Name="Accounts_RefAccount_comboBox" SelectedValue="{Binding ElementName=Accounts_Grid, Path=SelectedItem.Account}" HorizontalAlignment="Left" Margin="191,107,0,0" VerticalAlignment="Top" Width="153" Height="36" FontSize="20" />
                    <Label x:Name="label4_Copy5" Content="Particulars" HorizontalAlignment="Left" Margin="11,152,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.167,0.487" Height="42" Width="101" FontSize="20" />
                    <TextBox x:Name="Accounts_Particulars_textBox" Text="{Binding ElementName=Accounts_Grid, Path=SelectedItem.Particulars}" HorizontalAlignment="Left" Height="38" Margin="119,154,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="702" FontSize="20" />
                    <Label x:Name="label9_Copy1" Content="Debit" HorizontalAlignment="Left" Margin="400,106,0,0" VerticalAlignment="Top" Height="43" Width="64" FontSize="20" />
                    <TextBox x:Name="Accounts_Debit_textBox" Text="{Binding ElementName=Accounts_Grid, Path=SelectedItem.Debit}" HorizontalAlignment="Left" Height="38" Margin="465,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="119" FontSize="20" />
                    <Label x:Name="label9_Copy2" Content="Credit" HorizontalAlignment="Left" Margin="599,107,0,0" VerticalAlignment="Top" Height="43" Width="69" FontSize="20" />
                    <TextBox x:Name="Accounts_Credit_textBox" Text="{Binding ElementName=Accounts_Grid, Path=SelectedItem.Credit}" HorizontalAlignment="Left" Height="38" Margin="671,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="121" FontSize="20" />
                    <TextBox x:Name="Accounts_ID_textBox" Text="{Binding ElementName=Accounts_Grid, Path=SelectedItem.ID}" HorizontalAlignment="Left" Height="38" Margin="707,120,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="121" FontSize="20" Visibility="Hidden" />
                </Grid>
            
</UserControl>
