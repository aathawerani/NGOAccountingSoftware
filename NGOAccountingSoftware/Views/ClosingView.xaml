<?xml version="1.0" encoding="utf-8"?>
<UserControl xmlns:ui="clr-namespace:TrustApplication.ViewModels" x:Class="TrustApplication.Views.ClosingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Migrated from Tab 'Closing' -->
  <Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="#FFE5E5E5" ui:ResponsiveGrid.BreakpointWidth="1100" >
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

                    <Label x:Name="label_Copy561" Content="Trust" HorizontalAlignment="Left" Margin="16,12,0,0" VerticalAlignment="Top" Height="43" Width="55" FontSize="20" />
                    <ComboBox x:Name="Closing_Trust_comboBox" HorizontalAlignment="Left" Margin="79,17,0,0" VerticalAlignment="Top" Width="189" Height="36" FontSize="20" />
                    <ComboBox x:Name="Closing_Year_comboBox" HorizontalAlignment="Left" Margin="331,18,0,0" VerticalAlignment="Top" Width="135" RenderTransformOrigin="0.099,0.288" Height="36" FontSize="20" />
                    <Label x:Name="label7_Copy41" Content="Year" HorizontalAlignment="Left" Margin="280,14,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.07,-0.038" Height="44" Width="49" FontSize="20" />
                    <Button x:Name="Closing_Closing_button" Content="Closing" HorizontalAlignment="Left" Margin="725,22,0,0" VerticalAlignment="Top" Width="171" Click="Closing_Closing_button_Click" RenderTransformOrigin="-1.251,-5.21" />
                    <Button x:Name="Closing_Generate_button_Copy" Content="Generate Entries" HorizontalAlignment="Left" Margin="516,22,0,0" VerticalAlignment="Top" Width="171" Click="Closing_Generate_button_Copy_Click" RenderTransformOrigin="-1.251,-5.21" />
                    <DataGrid x:Name="Closing_Grid" AutoGenerateColumns="False" IsSynchronizedWithCurrentItem="True" HorizontalAlignment="Right" Margin="0,72,0,0" VerticalAlignment="Top" Height="433" Width="900" SelectionChanged="Accounts_Grid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding Path=Date}" />
                            <DataGridTextColumn Header="Account" Binding="{Binding Path=AccountKey}" />
                            <DataGridTextColumn Header="Particulars" Binding="{Binding Path=Particulars}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Width" Value="400" />
                                        <Setter Property="ToolTip" Value="{Binding Path=Particulars}" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Debit" Binding="{Binding Path=Debit}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Credit" Binding="{Binding Path=Credit}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            
</UserControl>
