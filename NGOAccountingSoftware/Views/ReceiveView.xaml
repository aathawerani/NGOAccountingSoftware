<?xml version="1.0" encoding="utf-8"?>
<UserControl xmlns:ui="clr-namespace:TrustApplication.ViewModels" x:Class="TrustApplication.Views.ReceiveView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Migrated from Tab 'Receive' -->
  <Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="#FFE5E5E5" ui:ResponsiveGrid.BreakpointWidth="1100" >
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

                    <Label x:Name="label_Copy100" Content="Trust" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="43" Width="55" FontSize="20" />
                    <ComboBox x:Name="Receivable_Trust_comboBox" HorizontalAlignment="Left" Margin="69,11,0,0" VerticalAlignment="Top" Width="189" Height="36" FontSize="20" SelectionChanged="Receivable_Trust_comboBox_SelectionChanged" />
                    <TextBox x:Name="Receivable_ID_textBox" Text="{Binding ElementName=Receivable_Grid, Path=SelectedItem.ID}" HorizontalAlignment="Left" Height="38" Margin="707,2,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="121" FontSize="20" Visibility="Hidden" Grid.Row="1" />
                    <DataGrid x:Name="Receivable_Grid" AutoGenerateColumns="False" IsSynchronizedWithCurrentItem="True" Grid.Row="0" HorizontalAlignment="Left" Margin="10,59,0,0" VerticalAlignment="Top" Height="427" Width="900">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding Path=Date}" />
                            <DataGridTextColumn Header="No" Binding="{Binding Path=No}" />
                            <DataGridTextColumn Header="A/c" Binding="{Binding Path=Account}" />
                            <DataGridTextColumn Header="Name" Binding="{Binding Path=Name}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Width" Value="200" />
                                        <Setter Property="ToolTip" Value="{Binding Path=Name}" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Particulars" Binding="{Binding Path=Particulars}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Width" Value="200" />
                                        <Setter Property="ToolTip" Value="{Binding Path=Particulars}" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Debit" Binding="{Binding Path=Debit}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Credit" Binding="{Binding Path=Credit}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Total" Binding="{Binding Path=Total}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="ID" Binding="{Binding Path=ID}" />
                        </DataGrid.Columns>
                    </DataGrid>
                    <Button x:Name="Receivables_Receivedbutton" Content="Received" HorizontalAlignment="Left" Margin="681,14,0,0" VerticalAlignment="Top" Width="97" Click="Receivables_Receivedbutton_Click" RenderTransformOrigin="-0.351,-7.532" />
                </Grid>
            
</UserControl>
