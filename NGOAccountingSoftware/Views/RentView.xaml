<UserControl x:Class="TrustApplication.Views.RentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200"
             UseLayoutRounding="True"
             SnapsToDevicePixels="True">

    <UserControl.Resources>
        <!-- Label text -->
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Button spacing -->
        <Style x:Key="BarButton" TargetType="Button">
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="MinWidth" Value="90"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <DockPanel LastChildFill="True" Margin="16">

            <!-- Title -->
            <TextBlock DockPanel.Dock="Top"
                       Text="{Binding Title}"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="4,0,4,16"/>

            <!-- Two side-by-side wrap columns -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT COLUMN: WrapPanel -->
                <WrapPanel Grid.Row="0" Grid.Column="0" Margin="0,0,8,0">
                    <!-- Field blocks are simple 2-row Grids so label and input align -->
                    <!-- Trust -->
                    <Grid Width="300" Margin="6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Trust" Style="{StaticResource LabelText}"/>
                        <ComboBox Grid.Row="1" Name="Rent_Trust_comboBox" Width="200" HorizontalAlignment="Left"/>
                    </Grid>

                    <!-- Plot -->
                    <Grid Width="300" Margin="6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Plot" Style="{StaticResource LabelText}"/>
                        <ComboBox Grid.Row="1" Name="Rent_Plot_comboBox" Width="200" HorizontalAlignment="Left"/>
                    </Grid>

                    <!-- Months -->
                    <Grid Width="300" Margin="6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Months" Style="{StaticResource LabelText}"/>
                        <ComboBox Grid.Row="1" Name="Rent_NumMonths_comboBox" Width="200" HorizontalAlignment="Left"/>
                    </Grid>

                    <!-- From Date -->
                    <Grid Width="300" Margin="6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="From Date" Style="{StaticResource LabelText}"/>
                        <DatePicker Grid.Row="1" Name="Rent_FromDate_datePicker" Width="200" HorizontalAlignment="Left"/>
                    </Grid>

                    <!-- To Date -->
                    <Grid Width="300" Margin="6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="To Date" Style="{StaticResource LabelText}"/>
                        <DatePicker Grid.Row="1" Name="Rent_ToDate_datePicker" Width="200" HorizontalAlignment="Left"/>
                    </Grid>
                </WrapPanel>

                <!-- RIGHT COLUMN: WrapPanel -->
                <WrapPanel Grid.Row="0" Grid.Column="1" Margin="8,0,0,0">
                    <!-- Space -->
                    <Grid Width="300" Margin="6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Space" Style="{StaticResource LabelText}"/>
                        <ComboBox Grid.Row="1" Name="Rent_Space_comboBox" Width="200" HorizontalAlignment="Left"/>
                    </Grid>

                    <!-- Space No. -->
                    <Grid Width="300" Margin="6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Space No." Style="{StaticResource LabelText}"/>
                        <ComboBox Grid.Row="1" Name="Rent_SpaceNo_comboBox" Width="200" HorizontalAlignment="Left"/>
                    </Grid>

                    <!-- Total Rent -->
                    <Grid Width="300" Margin="6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Total Rent" Style="{StaticResource LabelText}"/>
                        <TextBox Grid.Row="1" Name="Rent_TotalRent_textBox" Width="200" HorizontalAlignment="Left"/>
                    </Grid>

                    <!-- Total Water -->
                    <Grid Width="300" Margin="6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Total Water" Style="{StaticResource LabelText}"/>
                        <TextBox Grid.Row="1" Name="Rent_TotalWater_textBox" Width="200" HorizontalAlignment="Left"/>
                    </Grid>

                    <!-- Rent Arrears -->
                    <Grid Width="300" Margin="6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Rent Arrears" Style="{StaticResource LabelText}"/>
                        <TextBox Grid.Row="1" Name="Rent_RentArears_textBox" Width="200" HorizontalAlignment="Left"/>
                    </Grid>

                    <!-- Water Arrears -->
                    <Grid Width="300" Margin="6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Water Arrears" Style="{StaticResource LabelText}"/>
                        <TextBox Grid.Row="1" Name="Rent_WaterArears_textBox" Width="200" HorizontalAlignment="Left"/>
                    </Grid>

                    <!-- Particulars (wider block) -->
                    <Grid Width="616" Margin="6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Text="Particulars" Style="{StaticResource LabelText}"/>
                        <TextBox Grid.Row="1" Name="Rent_RentParticulars_textBox"
                                 Height="80" AcceptsReturn="True" TextWrapping="Wrap"/>
                    </Grid>

                    <!-- Actions (wider block) -->
                    <StackPanel Width="616" Margin="6">
                        <TextBlock Text="Actions" Style="{StaticResource LabelText}"/>
                        <StackPanel Orientation="Horizontal">
                            <Button Name="Rent_button" Content="New" Style="{StaticResource BarButton}"/>
                            <Button Name="Rent_Updatebutton" Content="Update" Style="{StaticResource BarButton}"/>
                            <Button Name="Rent_Clear" Content="Clear" Style="{StaticResource BarButton}"/>
                            <Button Name="Rent_Printbutton" Content="Print" Style="{StaticResource BarButton}"/>
                            <Button Content="Calculate" Style="{StaticResource BarButton}"/>
                        </StackPanel>
                    </StackPanel>
                </WrapPanel>

                <!-- Records Grid spanning both columns -->
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="6">
                    <TextBlock Text="Records" Style="{StaticResource LabelText}"/>
                    <DataGrid Name="Rent_Grid"
                              AutoGenerateColumns="True"
                              Height="240"
                              CanUserAddRows="False"
                              IsReadOnly="True"/>
                </StackPanel>

            </Grid>
        </DockPanel>
    </ScrollViewer>
</UserControl>
