<UserControl x:Class="TrustApplication.Views.RentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Label text -->
        <Style x:Key="LabelText" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <!-- Pair group without borders; fixed width so it wraps as a unit -->
        <Style x:Key="FieldGroup" TargetType="Grid">
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Width" Value="660"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>

        <!-- Single-field block -->
        <Style x:Key="SingleField" TargetType="StackPanel">
            <Setter Property="Margin" Value="8"/>
            <Setter Property="Width" Value="320"/>
            <Setter Property="Focusable" Value="False"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
        </Style>

        <!-- Buttons spacing -->
        <Style x:Key="BarButton" TargetType="Button">
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="MinWidth" Value="90"/>
        </Style>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <DockPanel LastChildFill="True" Margin="16">

            <!-- Title -->
            <TextBlock DockPanel.Dock="Top"
                       Text="{Binding Title}"
                       FontSize="22"
                       FontWeight="Bold"
                       Margin="4,0,4,16"/>

            <!-- Content: a WrapPanel so groups and single fields wrap naturally -->
            <WrapPanel Focusable="False" FocusVisualStyle="{x:Null}">

                <!-- ================== Paired groups with aligned rows ================== -->
                <!-- TRUST + PLOT -->
                <Grid Style="{StaticResource FieldGroup}" ShowGridLines="False">
                    <Grid.RowDefinitions>
                        <!-- Row 0: labels -->
                        <RowDefinition Height="Auto"/>
                        <!-- Row 1: inputs -->
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="320"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="320"/>
                    </Grid.ColumnDefinitions>

                    <!-- Labels row -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Trust" Style="{StaticResource LabelText}"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Plot" Style="{StaticResource LabelText}"/>

                    <!-- Inputs row -->
                    <ComboBox Grid.Row="1" Grid.Column="0" Name="Rent_Trust_comboBox" Width="200" VerticalAlignment="Top"/>
                    <ComboBox Grid.Row="1" Grid.Column="2" Name="Rent_Plot_comboBox" Width="200" VerticalAlignment="Top"/>
                </Grid>

                <!-- SPACE + SPACE NO. -->
                <Grid Style="{StaticResource FieldGroup}" ShowGridLines="False">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="320"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="320"/>
                    </Grid.ColumnDefinitions>

                    <!-- Labels row -->
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Space" Style="{StaticResource LabelText}"/>
                    <TextBlock Grid.Row="0" Grid.Column="2" Text="Space No." Style="{StaticResource LabelText}"/>

                    <!-- Inputs row -->
                    <ComboBox Grid.Row="1" Grid.Column="0" Name="Rent_Space_comboBox" Width="200" VerticalAlignment="Top"/>
                    <ComboBox Grid.Row="1" Grid.Column="2" Name="Rent_SpaceNo_comboBox" Width="200" VerticalAlignment="Top"/>
                </Grid>

                <!-- ================== Remaining single fields ================== -->
                <StackPanel Style="{StaticResource SingleField}">
                    <TextBlock Text="Months" Style="{StaticResource LabelText}"/>
                    <ComboBox Name="Rent_NumMonths_comboBox" Width="200" VerticalAlignment="Top"/>
                </StackPanel>

                <StackPanel Style="{StaticResource SingleField}">
                    <TextBlock Text="From Date" Style="{StaticResource LabelText}"/>
                    <DatePicker Name="Rent_FromDate_datePicker" Width="200" VerticalAlignment="Top"/>
                </StackPanel>

                <StackPanel Style="{StaticResource SingleField}">
                    <TextBlock Text="To Date" Style="{StaticResource LabelText}"/>
                    <DatePicker Name="Rent_ToDate_datePicker" Width="200" VerticalAlignment="Top"/>
                </StackPanel>

                <StackPanel Margin="8" Width="660" Focusable="False" FocusVisualStyle="{x:Null}">
                    <TextBlock Text="Particulars" Style="{StaticResource LabelText}"/>
                    <TextBox Name="Rent_RentParticulars_textBox"
                             Height="80"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"/>
                </StackPanel>

                <StackPanel Style="{StaticResource SingleField}">
                    <TextBlock Text="Total Rent" Style="{StaticResource LabelText}"/>
                    <TextBox Name="Rent_TotalRent_textBox" Width="200" VerticalAlignment="Top"/>
                </StackPanel>

                <StackPanel Style="{StaticResource SingleField}">
                    <TextBlock Text="Total Water" Style="{StaticResource LabelText}"/>
                    <TextBox Name="Rent_TotalWater_textBox" Width="200" VerticalAlignment="Top"/>
                </StackPanel>

                <StackPanel Style="{StaticResource SingleField}">
                    <TextBlock Text="Rent Arrears" Style="{StaticResource LabelText}"/>
                    <TextBox Name="Rent_RentArears_textBox" Width="200" VerticalAlignment="Top"/>
                </StackPanel>

                <StackPanel Style="{StaticResource SingleField}">
                    <TextBlock Text="Water Arrears" Style="{StaticResource LabelText}"/>
                    <TextBox Name="Rent_WaterArears_textBox" Width="200" VerticalAlignment="Top"/>
                </StackPanel>

                <!-- Buttons row (wide) -->
                <StackPanel Margin="8" Orientation="Vertical" Width="660" Focusable="False" FocusVisualStyle="{x:Null}">
                    <TextBlock Text="Actions" Style="{StaticResource LabelText}"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Name="Rent_button" Content="New" Style="{StaticResource BarButton}"/>
                        <Button Name="Rent_Updatebutton" Content="Update" Style="{StaticResource BarButton}"/>
                        <Button Name="Rent_Clear" Content="Clear" Style="{StaticResource BarButton}"/>
                        <Button Name="Rent_Printbutton" Content="Print" Style="{StaticResource BarButton}"/>
                        <Button Content="Calculate" Style="{StaticResource BarButton}"/>
                    </StackPanel>
                </StackPanel>

                <!-- Records Grid (wider) -->
                <StackPanel Margin="8" Width="1000" Focusable="False" FocusVisualStyle="{x:Null}">
                    <TextBlock Text="Records" Style="{StaticResource LabelText}"/>
                    <DataGrid Name="Rent_Grid"
                              AutoGenerateColumns="True"
                              Height="240"
                              CanUserAddRows="False"
                              IsReadOnly="True"/>
                </StackPanel>

            </WrapPanel>
        </DockPanel>
    </ScrollViewer>
</UserControl>
