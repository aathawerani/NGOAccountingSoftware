<?xml version="1.0" encoding="utf-8"?>
<UserControl xmlns:ui="clr-namespace:TrustApplication.ViewModels" x:Class="TrustApplication.Views.ReportsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Migrated from Tab 'Reports' -->
  <Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Background="#FFE5E5E5" ui:ResponsiveGrid.BreakpointWidth="1100" >
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

                    <Label x:Name="label_Copy56" Content="Trust" HorizontalAlignment="Left" Margin="16,10,0,0" VerticalAlignment="Top" Height="43" Width="55" FontSize="20" />
                    <ComboBox x:Name="Reports_Trust_comboBox" HorizontalAlignment="Left" Margin="75,11,0,0" VerticalAlignment="Top" Width="157" Height="36" FontSize="20" />
                    <Button x:Name="Report_Accounts_button" Content="Export" HorizontalAlignment="Left" Margin="803,16,0,0" VerticalAlignment="Top" Width="113" Click="Report_Accounts_button_Click" RenderTransformOrigin="-1.251,-5.21" />
                    <ComboBox x:Name="Reports_Year_comboBox" HorizontalAlignment="Left" Margin="279,12,0,0" VerticalAlignment="Top" Width="135" RenderTransformOrigin="0.099,0.288" Height="36" FontSize="20" />
                    <Label x:Name="label7_Copy4" Content="Year" HorizontalAlignment="Left" Margin="230,12,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.07,-0.038" Height="44" Width="49" FontSize="20" />
                    <Button x:Name="Report_Statements_button" Content="Statements" HorizontalAlignment="Left" Margin="683,16,0,0" VerticalAlignment="Top" Width="111" Click="Report_Statements_button_Click" RenderTransformOrigin="-1.251,-5.21" />
                    <DataGrid x:Name="Report_Grid" AutoGenerateColumns="False" IsSynchronizedWithCurrentItem="True" HorizontalAlignment="Right" Margin="0,61,0,0" VerticalAlignment="Top" Height="444" Width="900" SelectionChanged="Accounts_Grid_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Date" Binding="{Binding Path=Date}" />
                            <DataGridTextColumn Header="Account" Binding="{Binding Path=AccountKey}" />
                            <DataGridTextColumn Header="Particulars" Binding="{Binding Path=Particulars}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Width" Value="400" />
                                        <Setter Property="ToolTip" Value="{Binding Path=Particulars}" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Debit" Binding="{Binding Path=Debit}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Credit" Binding="{Binding Path=Credit}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                    <ComboBox x:Name="Reports_Statement_comboBox" SelectionChanged="Reports_Statement_comboBox_SelectionChanged" HorizontalAlignment="Left" Margin="487,12,0,0" VerticalAlignment="Top" Width="189" Height="36" FontSize="20" />
                    <Label x:Name="label7_Copy9" Content="Report" HorizontalAlignment="Left" Margin="414,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.07,-0.038" Height="44" Width="72" FontSize="20" />
                </Grid>
            
</UserControl>
