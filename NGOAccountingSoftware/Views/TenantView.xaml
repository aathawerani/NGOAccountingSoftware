<?xml version="1.0" encoding="utf-8"?>
<UserControl xmlns:ui="clr-namespace:TrustApplication.ViewModels" x:Class="TrustApplication.Views.TenantView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Migrated from Tab 'Tenant' -->
  <Grid xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Name="Tenant" Background="#FFE5E5E5" Margin="0,-5,0,5" ui:ResponsiveGrid.BreakpointWidth="1100" >
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="59*" />
                        <RowDefinition Height="207*" />
                    </Grid.RowDefinitions>
                    <Label x:Name="label1000" Content="Trust" HorizontalAlignment="Left" Margin="6,6,0,0" VerticalAlignment="Top" Height="43" Width="55" FontSize="20" />
                    <ComboBox x:Name="Tenant_Trust_comboBox" HorizontalAlignment="Left" Margin="70,9,0,0" VerticalAlignment="Top" Width="145" Height="36" FontSize="20" SelectionChanged="Tenant_Trust_comboBox_SelectionChanged" />
                    <Label x:Name="label_Copy1000" Content="Plot" HorizontalAlignment="Left" Margin="214,9,0,0" VerticalAlignment="Top" RenderTransformOrigin="5.095,0.449" Height="43" Width="49" FontSize="20" />
                    <ComboBox x:Name="Tenant_Plot_comboBox" HorizontalAlignment="Left" Margin="257,11,0,0" VerticalAlignment="Top" Width="98" RenderTransformOrigin="0.475,1.076" Height="36" FontSize="20" SelectionChanged="Tenant_Plot_comboBox_SelectionChanged" />
                    <DataGrid x:Name="Tenant_Grid" AutoGenerateColumns="False" IsSynchronizedWithCurrentItem="True" HorizontalAlignment="Left" Margin="10,57,0,0" VerticalAlignment="Top" Height="462" Width="900" Grid.RowSpan="2">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Name" Binding="{Binding Path=Name}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Width" Value="500" />
                                        <Setter Property="ToolTip" Value="{Binding Path=Name}" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Space" Binding="{Binding Path=Space}" />
                            <DataGridTextColumn Header="No" Binding="{Binding Path=No}" />
                            <DataGridTextColumn Header="Rent" Binding="{Binding Path=MRent}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Water" Binding="{Binding Path=WCharges}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="CNIC" Binding="{Binding Path=CNIC}">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="ID" Binding="{Binding Path=ID}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            
</UserControl>
